<input id="popup-messages" value="<%=@values%>" type="hidden" />

<div class="signupHeader">


  <%= image_tag "logo-login.png", id:"loginLogo", class: "loginLogo", alt:"Login" %>

  <br/>
  <span class="signinTitle"><%=t 'sign_up_text_part1' %></span>
  <br/>

  <span class="signinDetail"><%=t 'sign_up_text_part2' %></span>


</div>

<div id="registerDiv" class="registerDiv">
    <div>
        <%= form_tag users_path, :method => :post, :remote => true, :id=> 'signupForm' do %>
        <input name="lang" value="<%=I18n.locale%>" type="hidden" />
        <input id="username_field" name="user[email]" type="text" class="loginField animField" placeholder="<%=t 'email' %>"/><br>
        <input id="password_field" name="user[password]" type="password" class="loginField animField" placeholder="<%=t 'password' %>"/><br>
        <input id="password_retry_field" name="user[password_confirmation]" type="password" class="loginField animField" placeholder="<%=t 'password_confirm' %>"/><br>
        <input type="submit" class="loginButton animButton" value="<%=t 'join_button' %>"/>
        <% end %>
        <div style="padding-top: 5px;color: #A5A5A5;font-size: 12px; display: table; width: 260px;">
          <div style="width: 85%;float: left; text-align: justify"><%=t 'sign_up_info' %></div>
          <div id="langswitcher" class="langSwitcher" ><%= @lang_label %></div>
        </div>
    </div>
</div>

<% have_account = t 'have_account' %>
<%= render partial: 'shared/features', locals: {  msg: "<a class=\"signupLink\" href=\"/#{I18n.locale}/pages/signin\">" + have_account +"</a>"} %>

<script>
    signup_loaded()
</script>

