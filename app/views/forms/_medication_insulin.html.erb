<div class="dataForm medication_insulin <% if local_assigns.fetch(:locals, {})[:defaultHidden] %>hidden<% end %>">
  <input type="hidden" name="medication[source]" value="<%= @default_source %>">

  <input type="search" class="dataFormField medication_insulin_name" placeholder="<%=t 'insulin_placeholder'%>" disabled>
  <input class="medication_insulin_id" name="medication[medication_type_id]" type="hidden">
  <input class="custom_insulin_medication_name" name="medication[custom_medication_type_name]" type="hidden">

  <input type="text" name="medication[amount]" class="dataFormField medication_insulin_amount" placeholder="<%=t 'insulin_dosage'%>"/>
  <div class="dataFormFieldUnit "><%=t 'unit'%></div>
  <br>

  <input class="dataFormField medication_insulin_datepicker" type="text"  name="medication[date]" value='<%= DateTime.current.strftime("%F %R") %>'>
  <br>

</div>
